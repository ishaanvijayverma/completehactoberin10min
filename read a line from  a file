#include <stdio.h>// header file
#include <stdlib.h> //header file
int main() ///main function
{
    char c[1000];
    FILE *fptr
    if ((fptr = fopen("program.txt", "r")) == NULL)
    {
        printf("Error! opening file");
  
        exit(1);         
    }
    // reads text until newline 
    fscanf(fptr,"%[^\n]", c);
    printf("Data from the file:\n%s", c);
    close(fptr)
    
   
}
